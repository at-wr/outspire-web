---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Page Not Found">
  <section class="container mx-auto max-w-7xl flex items-center justify-center px-4 py-24 md:py-32">
    <div class="flex max-w-md flex-col items-center space-y-4 text-center">
      <div class="text-6xl font-bold text-slate-900">404</div>
      <h1 class="text-2xl font-bold tracking-tight sm:text-3xl">Page not found</h1>
      <p class="text-slate-600">
        Sorry, we couldn't find the page you're looking for.
      </p>
      <a
        href="/"
        class="inline-flex h-10 items-center justify-center rounded-md bg-slate-900 px-8 text-sm font-medium text-white shadow transition-colors hover:bg-slate-900/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-slate-950"
      >
        Go back home
      </a>
    </div>
  </section>
</MainLayout>
